<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.hp.fragment.MainActivity"
    android:background="@color/green">

    <fragment
        android:id="@+id/image_frag"
        android:name="com.example.hp.fragment.Frag_logo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_toStartOf="@+id/description_frag"
        android:layout_toLeftOf="@+id/description_frag" />

    <fragment
        android:id="@+id/list_frag"
        android:name="com.example.hp.fragment.Frag_list"
        android:layout_width="160dp"
        android:layout_height="411dp"
        android:layout_below="@+id/image_frag"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="0dp" />

    <fragment
        android:id="@+id/description_frag"
        android:name="com.example.hp.fragment.Frag_Description"
        android:layout_width="282dp"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="0dp"
        android:layout_toEndOf="@+id/list_frag"
        android:layout_toRightOf="@+id/list_frag" />

</RelativeLayout>